<div id="content_body">
  <div id="authorize_application_modal" class="static_page">
    <div class="">
      <div class="">
        <div class="modal-header">
          <h3><%=translation.oauth.authorize.title%> <%= application.name %>?</h3>
        </div>
    	<form id="" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="<%= application.url %>" method="POST" enctype="">
        <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
          <div class="modal-body clearfix">
            <div>
              <p>
                <%=translation.oauth.authorize.content01%> <a href="/idm/applications/<%= application.id %>/"><%= application.name %></a> <%=translation.oauth.authorize.content02%>
              </p>
              <div class="alert alert-info">
                <p><input type="checkbox" id="seleccion1" name="seleccion" value="username" checked>
                  <label for="seleccion1">Username</label>
                </p>
                <p><input type="checkbox" id="seleccion2" name="seleccion"
                  value="description" checked>
                  <label for="seleccion2">Description</label>
                </p>
                <p>
                  <input type="checkbox" id="seleccion3" name="seleccion" value="image" checked>
                  <label for="seleccion3">Image</label>
                </p>
                <p>
                  <input type="checkbox" id="seleccion4" name="seleccion" value="email" checked>
                  <label for="seleccion4">Email</label>
                </p>
                <p>
                  <input type="checkbox" id="seleccion5" name="seleccion"
                  value="website" checked>
                  <label for="seleccion5">Website</label>
                </p>


                <%=translation.oauth.authorize.content03%>
              </div>
            </div>
            <fieldset>
            </fieldset>
          </div>
          <div class="modal-footer">
            <a href="/" class="secondary cancel btn btn-default"><%=translation.oauth.authorize.deny_btn%></a>
            <button type="submit" class="btn btn-primary"><%=translation.oauth.authorize.authorize_btn%></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
