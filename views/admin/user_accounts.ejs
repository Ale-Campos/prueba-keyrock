<div id="content_body">
  <div id="user_accounts" class="static_page">
    <div class="">
      <div class="">
        <div class="modal-header">
          <h3>
            <div class="page-header">
              <h2>
                Manage User Accounts
              </h2>
            </div>
          </h3>
        </div>
        <form id="" ng-controller="DummyCtrl" name="" autocomplete="" class="ng-scope ng-pristine ng-valid" action="/idm_admin/user_accounts/" method="POST" enctype="">
          <input type="hidden" name="" value="">
          <div class="modal-body clearfix">
            <h5>Input the email of the user you want to manage.</h5>
            <fieldset>
              <div class="form-group required">
                <label class="control-label  required" for="id_email">E-mail</label>
                <div class=" ">
                  <input class="form-control" id="id_email" name="email" type="text">
                </div>
              </div>
              <% if (error === "not_found") { %>
                <span class="help-block alert alert-danger ">User not found.</span>
              <% } %>
            </fieldset>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Find</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>