<div id="content_body">
    <div class="page-header">
        <h1>Change Password</h1>
    </div>
    <div id="change_password_modal" class="static_page">
        <div class="">
            <div class="">
                <div class="modal-header">
                    <h3></h3>
                </div>
                <form id="change_password_modal" ng-controller="DummyCtrl" name="" autocomplete="off" class="ng-scope ng-pristine ng-valid" action="/settings/password/" method="POST" enctype="">
                    <!-- <input type="hidden" name="csrfmiddlewaretoken" value="y069RYOuzqydZgIcTdgvGiM2cLc9RXeG"> -->
                    <div class="modal-body clearfix">
                        <div class="left">
                            <% if (errors.includes('password_different')) { -%>
                                <span class="help-block alert alert-danger ">New password and confirm password not match.</span>
                            <% } -%>
                            <fieldset>
                                <div class="form-group required has-feedback">
                                    <label class="control-label  required" for="id_current_password">Current password</label>
                                    <div class=" ">
                                        <input class="form-control" id="id_current_password" name="current_password" type="password"><span class="form-control-feedback fa fa-eye"></span>
                                        <% if (errors.includes('current_password')) { -%>
                                            <span class="help-block alert alert-danger ">This field is required.</span>
                                        <% } -%>
                                    </div>
                                </div>
                                <div class="form-group required has-feedback">
                                    <label class="control-label  required" for="id_new_password">New password</label>
                                    <div class=" ">
                                        <input class="form-control" id="id_new_password" name="new_password" type="password"><span class="form-control-feedback fa fa-eye"></span>
                                        <% if (errors.includes('new_password')) { -%>
                                            <span class="help-block alert alert-danger ">This field is required.</span>
                                        <% } -%>
                                    </div>
                                </div>
                                <div class="form-group required has-feedback">
                                    <label class="control-label  required" for="id_confirm_password">Confirm new password</label>
                                    <div class=" ">
                                        <input class="form-control" id="id_confirm_password" name="confirm_password" type="password"><span class="form-control-feedback fa fa-eye"></span>
                                        <% if (errors.includes('confirm_password')) { -%>
                                            <span class="help-block alert alert-danger ">This field is required.</span>
                                        <% } -%>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="right">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input class="btn btn-primary" type="submit" value="Submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>