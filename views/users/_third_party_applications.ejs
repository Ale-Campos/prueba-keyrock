<div id="content_body">
  <div id="third_party_applications_page">
    <header>
      <div class="page-header">
        <h2>
          Aplicaciones de <%=user.username%>

        </h2>
      </div>
    </header>
    <div id="">

      <% if (applications.length > 0) {%>
        <% for (var i = 0; i < applications.length; i++) { %>
          <div class="panel panel-default info">
            <div class="panel-body">
              <div class="panel-body datatable-content">
                <input type='hidden' name='app_name' value='<%=applications[i].name%>' />
                <h1 class="panel heading"><%=applications[i].name%></h1>
                <div class="avatar logo">
                  <img alt="application logo" src=<%=applications[i].image%>>
                </div><br>
                <div class="">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse_website<%=[i]%>" aria-expanded="true" aria-controls="collapse_oauth2_credentials" class="collapsed">
                      Website <i class="fa fa-angle-up"></i>
                    </a>
                  </h4>
                  <div class="collapse_out">
                    <div id="collapse_website<%=[i]%>" class="form-group collapse" role="tabpanel">
                      <div>
                        <h6 class="panel-heading"><%= applications[i].url%></h6>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse_login_date<%=[i]%>" aria-expanded="true" aria-controls="collapse_oauth2_credentials" class="collapsed">
                      Fecha de acceso <i class="fa fa-angle-up"></i>
                    </a>
                  </h4>
                  <div class="collapse_out">
                    <div id="collapse_login_date<%=[i]%>" class="form-group collapse" role="tabpanel">
                      <div>
                        <h6 class="panel-heading"><%= applications[i].login_date%></h6>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="">
                  <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse_shared_attributes<%=[i]%>" aria-expanded="true" aria-controls="collapse_oauth2_credentials" class="collapsed">
                      Atributos compartidos <i class="fa fa-angle-up"></i>
                    </a>
                  </h4>
                  <div class="collapse_out">
                    <div id="collapse_shared_attributes<%=[i]%>" class="form-group collapse" role="tabpanel">
                      <div>
                        <h6 class="panel-heading"><%= applications[i].shared_attributes%></h6>
                      </div>
                    </div>
                  </div>
                </div>
                <br>
                <div class="btn-group">
                  <button id="delete_application" title="Delete application" data-toggle="modal" data-target="#delete_application_modal" class="btn btn-default btn-sm ajax-modal">
                    Delete
                  </button>
                </div>
                <div id="delete_application_modal" class="modal fade" style="top: 0px;" aria-hidden="false">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <a href="#" class="close" data-dismiss="modal">×</a>
                                <h3><h3>Borrar mis datos de la aplicación</h3></h3>
                            </div>
                            <form id="delete_application_form" ng-controller="DummyCtrl" name="" autocomplete="" class="" action="/idm/users/<%= user.id %>/_third_party_applications/delete" method="POST" enctype="">
                                <input type='hidden' name='_csrf' value='<%= csrf_token%>' />
                                <input type='hidden' name='app_id' value='<%= applications[i].id%>' />

                                <div class="modal-body clearfix">
                                  <p>Estás a punto de borrar la siguiente aplicación</p>
                                  <p><%=applications[i].name%></p>
                                  <p><%=applications[i].id%></p>
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" class="btn btn-primary" value="Borrar">
                                    <button data-dismiss="modal" class="btn btn-default secondary cancel">Cancelar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

              </div>
            </div>
          </div>
          <%}%>
          <%} else { %>
            <div class="panel panel-default info">
              <div class="panel-body">
                <h2>No hay aplicaciones disponibles</h2>
              </div>
            </div>
            <%}-%>

          </div>
        </div>



        <%include _delete_third_party_application%>
        <script src="/javascripts/users/handle_delete_application.js" type="text/javascript"></script>
        <script type="text/javascript">
          $('.panel-title a:first-child').mouseover(function(){
            $(this).children().toggleClass('fa-rotate-180');
          });
          $('.panel-title a:first-child').mouseleave(function(){
            if ($(this).hasClass('collapsed')){
              $(this).children().removeClass('fa-rotate-180');
            } else {
              $(this).children().addClass('fa-rotate-180');
            }
          });
          $('.panel-title a:first-child').click(function(){
            if ($(this).hasClass('collapsed')){
              $(this).children().addClass('fa-rotate-180');
            } else {
              $(this).children().removeClass('fa-rotate-180');
            }
          });
        </script>
